<?xml version="1.0" encoding="UTF-8"?>
<jsp:root version="1.2" xmlns:c="http://java.sun.com/jsp/jstl/core"
	xmlns:jsp="http://java.sun.com/JSP/Page"
	xmlns:ui="http://www.sun.com/web/ui"
	xmlns:f="http://java.sun.com/jsf/core">
	
	<jsp:useBean class="pe.gob.pj.util.Mensaje" id="mensaje"/>
	<ui:link  id="link1" url="/resources/css/menu/menu.css" />

		<table id= "menu" border="0" cellpadding="0" cellspacing="0" width="776px" style="width: 776px">	

		<c:if test="${tipoAcceso ne 'P'}">
