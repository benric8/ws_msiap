					<tr>
						<td style="height: 15px; font-weight: bold; font:Verdana; font-size: 8px;width: 200px" align="left">
						<!--<c:out value="MSIAP V.1.2.1.1"></c:out>-->
						<c:out value="${SessionBean1.version}"></c:out>
						<!--<c:out value="${mensaje.version}"></c:out>-->
						<!--<jsp:getProperty name="mensaje" property="version" />-->
						</td>
						<td></td>
						<td align="right" style="height: 15px; font-weight: bold; font:Verdana; font-size: 8px;">
