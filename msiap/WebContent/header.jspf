				<c:forEach var="opcionesMenu" items="${SessionBean1.lstPerfilMenuOpcion}" varStatus="rowCounter">
        			<li><a  href="${pageContext.request.contextPath}${opcionesMenu.PAGINA_JSP}">${opcionesMenu.ABREV_MENU}</a>	   					
					<c:if test="${opcionesMenu.subMenu!=null}">
						<ul style="padding-left: 2px; padding-right: 2px; margin-left: 0px;">					
						<c:forEach var="opcionesSubMenu" items="${opcionesMenu.subMenu}" varStatus="rowCounter">        			
   							<li> <a  href="${pageContext.request.contextPath}${opcionesSubMenu.PAGINA_JSP}">${opcionesSubMenu.ABREV_OPCION}</a>	   							
   							</li>
   	  			    	</c:forEach>    	            
    	            	</ul>
    	  			</c:if>    
    	  			
        			</li>        			
      			</c:forEach>
				<c:if test="${tipoAcceso ne 'P'}">
