<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">

<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/"
	debug="false">

	<appender name="consola" class="org.apache.log4j.ConsoleAppender">
		<param name="Threshold" value="INFO"/>
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%-5p [class:%c]%m%n"/>
		</layout>
	</appender>

	<appender name="archivo"
		class="org.apache.log4j.DailyRollingFileAppender">
		<param name="Threshold" value="DEBUG"/>
		<param name="DatePattern" value="'_'yyyy-MM-dd'.log'"/>
		<!--<param name="File" value="c:/pe.gob.pj.log/msiap/1.2.1.1/msiap_1.2.1.1.log"/> -->
		<!--<param name="File" value="c:/pe.gob.pj.log/msiap/1.2.2/msiap_1.2.2.log"/>-->
		<param name="File"	value="/opt/pe.gob.pj.log/msiap/msiap.log"/>
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern"
				value="[%d{dd-MM-yyyy HH:mm:ss}] %-5p [class:%c]%m%n"/>
		</layout>
	</appender>

	<root>
		<priority value="INFO"/>
		<!--appender-ref ref="consola"/-->
		<appender-ref ref="archivo"/>
	</root>

</log4j:configuration>
